#!/bin/bash

# Sprawdzamy, czy w stagingu są pliki do zatwierdzenia
if git diff --cached --quiet; then
    echo "Brak zmian w stagingu. Hook pre-commit zakończony."
    exit 0
fi

# Wyświetlenie komunikatu ostrzegawczego
echo "Automatyczny commit: Wykryto zmiany w stagingu, ale hook nie wykona automatycznego commitu, aby uniknąć problemów z HEAD."

# Możesz dodać sprawdzenie stylu kodu lub inne akcje, ale nie wykonywać commitu w hooku.
exit 0

